{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "~components/*": ["./components/*"],
      "~lib/*": ["./lib/*"],
      "~theme": ["./theme"],
      "~stores/*": ["./lib/stores/*"],
      "~contexts/*": ["./lib/contexts/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
